- var title = "Contact Fintiko | Get Support & Inquire About Our Business Solutions";
- var description = "Reach out to Fintiko for inquiries, support, or more information about our payment solutions, multi-currency accounts, and business services. Our team is here to assist you and provide tailored solutions for your needs. Contact us today!";

doctype html
html(lang="en")
	include includes/head
	body
		include includes/header
		
		main.main
			section.top-section
				
				nav.container
					a.top-section__crumb(href="index.html")
						p
							img(src="public/img/crumb-arr.svg", width="22" height="8" alt="arrow")
						h4 Contacts
			section.form-block
				article.container
					.form-block__wrap
						.form-block__left 
							h1.form-block__left_title Get in touch with our team today.
							h2.form-block__left_question It’s about time to expand and extend your reach, isn’t it? 
							p.form-block__left_text Get in touch with us, and we'll guide you to the ultimate solution for managing all your business finances.
						.form-block__right 
							form#formContacts.form(action="contact_form.php")
								label.form__item 
									input(type="text" name="full_name" data-name="name" data-valid="false")
									p.placeholder Full Name:
									.error-text Information Required
								label.form__item 
									input(type="text" name="company_name" data-name="name" data-valid="false")
									p.placeholder Company Name:
									.error-text Information Required
								label.form__item 
									input(type="text" name="email"  data-name="email" data-valid="false")
									p.placeholder Email Address:
									.error-text Information Required
								label.form__item 
									input(type="number" name="tel" data-name="tel" data-valid="false")
									p.placeholder Phone Number:
									.error-text Information Required
								.form__item.no-bg
									fieldset
										legend Select subject:
										
										input(type="radio" id="inquiry" name="subject" value="inquiry" checked)
										label(for="inquiry") General Inquiry

										input(type="radio" id="support" name="subject" value="support")
										label(for="support") Technical Support

										input(type="radio" id="other" name="subject" value="other")
										label(for="other") Other
									.error-text Information Required
								label.form__item
									textarea(type="text"  data-valid="false"  name="message"  data-name="txt")
									p.placeholder Message
									.error-text Information Required
								
								label.form__checkbox
									
									input(type="checkbox" data-valid="false" data-name="rule")
									.checkbox__box
										svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 15 15' fill='none')
											rect(x='0.5' y='0.5' width='14' height='14' stroke='url(#paint0_linear_1522_2630)')
											path(d='M12 4.90446L11.06 4L6.66667 8.19745L4.94667 6.56051L4 7.4586L6.66667 10L12 4.90446Z' fill='white' opacity='0.4')
											defs
												lineargradient#paint0_linear_1522_2630(x1='7.5' y1='0' x2='7.5' y2='15' gradientUnits='userSpaceOnUse')
													stop(stop-color='white' stop-opacity='0.6')
													stop(offset='1' stop-color='white' stop-opacity='0')
									


									p.text I agree to the 
										a(href="terms.html") Business <br> Terms of Service 
										| and our  
										a(href="privacy.html") privacy policy

									.error-text Information Required
								.form__submit
									button.btn.button.button-blue(type="submit") Send contact request
										
									
			section.help
				article.container
					.help__block
						picture.bg
							source(type="image/webp" srcset="public/img/contactsPage/bg-item-mob.webp" media="(max-width: 768px)")
							source(type="image/webp" srcset="public/img/contactsPage/bg-item.webp")
							source(srcset='public/img/contactsPage/bg-item-mob.png' media='(max-width: 768px)')
							img(src="public/img/contactsPage/bg-item.png", srcset="public/img/contactsPage/bg-item.webp" sizes="(max-width: 768px) 711px" width="1313" height="472" alt="background elements")
						h2.title Need help with your existing business account?
						a.btn.button.button-blue(href="#" target="_blank") Log in to your account
						


		include includes/footer
		include includes/cookies_popup
		include includes/applyModal
		include includes/responseModals
		include includes/foot







